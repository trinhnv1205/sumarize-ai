{
  "manifest_version": 2,
  "name": "Summarize AI",
  "version": "3.0",
  "description": "Summarize AI is a tool that summarizes and translate articles and web pages. | Author - TRINHNV",
  "permissions": [
    "activeTab",
    "https://*/*",
    "http://*/*",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "icons": {
    "16": "icons/logo16.svg",
    "48": "icons/logo48.svg",
    "128": "icons/logo128.svg"
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/logo16.svg",
      "48": "icons/logo48.svg",
      "128": "icons/logo128.svg"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{46f13677-54dc-4555-bb05-da68e346a1a8}"
    }
  }
}